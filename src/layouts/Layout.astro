---
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description, image = "/favicon.jpeg" } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<!-- Metadata -->
		<meta charset="utf-8" />
		<meta name="locale" content="de_DE" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href={image} />
		<meta name="generator" content={Astro.generator} />

		<!-- Main Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta name="og:image" content={new URL(image, Astro.url)} />
		<meta property="og:site_name" content={title} />
		<meta property="og:url" content={Astro.url} />
		<meta name="theme-color" content="#3AEA7E" />
	</head>
	<body>
		<slot />
	</body>

	<style is:global>
		:root {
			--accent: 58, 234, 126;
			--accent-light: 204, 249, 213;
			--accent-dark: 10, 102, 69;
			--accent-gradient: linear-gradient(
				45deg,
				rgb(var(--accent)),
				rgb(var(--accent-light)) 30%,
				white 60%
			);
		}
		html {
			font-family: monospace;
			background: #121916;
			background-size: 224px;
		}
	</style>
</html>
