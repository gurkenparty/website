---
interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="locale" content="de_DE" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#3AEA7E" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href="/favicon.jpeg" />

		<meta property="og:type" content="website" />
		<meta name="og:image" content="/favicon.jpeg" />
		<meta property="og:site_name" content="Gurkenparty" />
		<meta property="og:url" content="http://gurken.party" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 58, 234, 126;
		--accent-light: 204, 249, 213;
		--accent-dark: 10, 102, 69;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: monospace;
		background: #121916;
		background-size: 224px;
	}
</style>
