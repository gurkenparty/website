---
import Meta from "../components/Meta.astro";
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description, image = "/favicon.jpeg" } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<Meta
			title={title}
			description={description}
			color="#3AEA7E"
			image={image}
		/>
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				--accent: 58, 234, 126;
				--accent-light: 204, 249, 213;
				--accent-dark: 10, 102, 69;
				--accent-gradient: linear-gradient(
					45deg,
					rgb(var(--accent)),
					rgb(var(--accent-light)) 30%,
					white 60%
				);
				--background: 18, 25, 22;
			}
			html {
				font-family: monospace;
				background: rgb(var(--background));
				background-size: 224px;
				color: white;
			}
		</style>
	</body>
</html>
