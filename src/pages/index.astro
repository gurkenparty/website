---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import Header from "../components/Header.astro";
import Gradient from "../components/Gradient.astro";
---

<Layout
	title="Gurkenparty"
	description="Wir sind drei deutsche Gurkenprogrammierer!"
>
	<div class="top-bar">
		<button class="menu-button">â˜°</button>
		<div class="top-bar-buttons">
			<button class="top-bar-button">About Us</button>
			<button class="top-bar-button">Gurkenland</button>
			<button class="top-bar-button">KeinPLanGrad</button>
		</div>
	</div>
	<Main>
		<Header style="text-align: center;">
			Willkommen bei den <Gradient>Gurken.</Gradient>
		</Header>
		<p style="text-align: center;">
			Wir sind drei deutsche Gurkenprogrammierer!
		</p>
	</Main>
	<div class="footer-bar"></div>
</Layout>

<style>
	.top-bar {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 40px;
		background-color: rgb(var(--accent));
		display: flex;
		align-items: center;
		justify-content: flex-start;
		padding: 0 20px;
		box-sizing: border-box;
	}

	.menu-button {
		background: none;
		border: none;
		color: white;
		font-size: 18px;
		cursor: pointer;
		margin-right: 50px;
	}

	.top-bar-buttons {
		display: flex;
		align-items: center;
	}

	.top-bar-button {
		background: none;
		border: none;
		color: white;
		font-size: 16px;
		cursor: pointer;
		margin-right: 50px;
	}

	.footer-bar {
		position: fixed;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 40px;
		background-color: rgb(var(--accent));
	}
</style>
